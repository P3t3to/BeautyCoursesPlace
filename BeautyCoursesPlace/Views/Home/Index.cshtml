@model IEnumerable<CourseIndexServiceModel>

@{
    ViewData["Title"] = "Home Page";
    var courses = Model?.ToList() ?? new List<CourseIndexServiceModel>();
}

@if (!courses.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for learning!</h1>
        <p class="lead">
            No courses are currently available. Why not create one?
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="Course" asp-action="Add" class="btn btn-primary btn-lg"
                   role="button">Add Course</a>
            }
        </p>
    </div>
}
else
{
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < courses.Count; i++)
            {
                var course = courses[i];
                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <img class="d-block w-100" style="height:400px; object-fit:cover; border-radius:10px;"
                         src="@course.ImageUrl" alt="Image of @course.Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>
                            <a class="btn btn-primary" asp-controller="Course" asp-action="Details"
                               asp-route-id="@course.Id" asp-route-information="@course.GetInformation()">@course.Title</a>
                        </h5>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" style="background-color: rgba(0, 0, 0, 0.7); border-radius: 50%; width: 50px; height: 50px;" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" style="background-color: rgba(0, 0, 0, 0.7); border-radius: 50%; width: 50px; height: 50px;" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}


