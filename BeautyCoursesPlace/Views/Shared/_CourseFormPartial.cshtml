@model CourseFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title" style="color: pink;"></label>
                <input asp-for="Title" class="form-control" placeholder="Title...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" style="color: pink;"></label>
                <input asp-for="Address" class="form-control" placeholder="Address...">
                <span asp-validation-for="Address" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" style="color: pink;"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder=""></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" style="color: pink;"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" style="color: pink;"></label>
                <input asp-for="Cost" class="form-control">
                <span asp-validation-for="Cost" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" style="color: pink;"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                @* input class="btn btn-primary mt-3" type="submit" value="Add Course" style="color: pink; font-style: italic;"> *@
                <input class="btn mt-3" type="submit" value="Add Course" style="background-color: purple; color: white; font-style: italic;">
            </div>
        </form>
    </div>
</div>
