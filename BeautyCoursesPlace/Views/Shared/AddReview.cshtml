@model AddReviewViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Review</title>
    <style>
        /* Стилове за цялата страница */
        body {
            font-family: Arial, sans-serif;
            background-color: #ede7f6; /* Лек лилав фон */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        /* Картичката за формуляра */
        .review-card {
            background-color: #fff;
            border: 1px solid #f8bbd0; /* Светло розов кант */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 400px;
            padding: 20px;
            text-align: center;
        }

        /* Заглавие */
        h2 {
            color: #ba68c8; /* Лилав цвят */
            margin-bottom: 15px;
        }

        /* Полето за текст */
        textarea {
            width: 100%;
            height: 120px;
            border: 1px solid #f8bbd0;
            border-radius: 8px;
            padding: 10px;
            font-size: 14px;
            color: #555;
            resize: none;
            outline: none;
            transition: border-color 0.3s;
        }

            /* Фокус върху текстовото поле */
            textarea:focus {
                border-color: #d48fbc; /* Нежно розово при фокус */
                box-shadow: 0 0 5px rgba(212, 143, 188, 0.5);
            }

        /* Валидационни съобщения */
        span {
            display: block;
            color: #d32f2f; /* Червен цвят */
            font-size: 12px;
            margin-top: 5px;
        }

        /* Бутон за изпращане */
        button {
            background-color: #d48fbc; /* Нежно розово */
            color: #fff;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 15px;
            transition: background-color 0.3s, transform 0.2s;
        }

            button:hover {
                background-color: #c48fb3; /* По-тъмен нюанс на розовото */
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <!-- Само картичката Add Review -->
    <div class="review-card">
        <h2>Add Review</h2>

        <form asp-action="AddReview" method="post">
            <input type="hidden" asp-for="CourseId" />
            <textarea asp-for="Feedback" placeholder="Write your review here..."></textarea>
            <span asp-validation-for="Feedback"></span>
            <button type="submit">Submit Review</button>
        </form>
    </div>
</body>
</html>