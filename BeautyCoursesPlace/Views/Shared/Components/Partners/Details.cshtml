@model PartnerViewModel

<h2>@Model.Name</h2>

<div>
    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
    <p><strong>Address:</strong> @Model.Address</p>

    <h4>Courses</h4>
    <ul>
        @foreach (var course in Model.Courses)
        {
            <li>@course</li>
        }
    </ul>

    <h4>Saloons</h4>
    <ul>
        @foreach (var saloon in Model.Saloons)
        {
            <li>@saloon</li>
        }
    </ul>
</div>