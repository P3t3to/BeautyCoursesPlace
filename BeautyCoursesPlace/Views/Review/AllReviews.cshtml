@model IEnumerable<CourseViewModel>



<h2>Your Signed-In Courses</h2>

<ul>
    @foreach (var course in Model)
    {
        <li>
            <h3>@course.Title</h3>
            <p>@course.Description</p>
            <img src="@course.ImageUrl" alt="Course Image" style="width: 200px;" />
            <a asp-action="AddReview" asp-route-id="@course.Id">Add Review</a>
        </li>
    }
</ul>

